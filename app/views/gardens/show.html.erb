<div class="banner" style="background-image: url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1> <%= @garden.name %></h1>
  </div>
</div>
<div>
  <%= link_to "Back to gardens", gardens_path %>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <h4>Add a plant:</h4>
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name, placeholder: "Palm tree" %>
        <%= f.input :image_url, placeholder: "https://some_nice_image_found_on_google.jpg" %>
        <%= f.submit "Add", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @garden.plants.each do |plant| %>
      <div class="card-category col-4" style="background-image: url(<%= plant.image_url %>)">
          <%= plant.name %>
          <%= link_to "+", plant_path(plant), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "card-remove-link" %>
      </div>
    <% end %>
  </div>
</div>
